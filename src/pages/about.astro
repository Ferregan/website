---
import { getEntry } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";
import Grid from "../components/Grid.astro";
import SlideshowGrid from "../components/SlideshowGrid.astro";
import Slideshow from "../components/Slideshow.astro";
import Illustrations from "../components/Illustrations.astro";
import Description from "../components/Description.astro";

const about = await getEntry("about", "about");
const { Content } = await about.render();

---

<BaseLayout>
  <Content components={{ Grid, Slideshow, SlideshowGrid, Illustrations, Description }}/>
</BaseLayout>

